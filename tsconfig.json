{
    "compilerOptions": {
        "allowJs": true,
        "pretty": false,
        "sourceMap": false,
        "target": "es2019",
        "baseUrl": ".",
        "alwaysStrict": true,
        "module": "CommonJS",
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./custom_typings",
            "./node_modules/@types"
        ],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "custome_typings", "package.json", "package-lock.json"]
}